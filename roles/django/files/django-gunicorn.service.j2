[Unit]
Description={{ project_name }}_{{ project_env }}
After=postgresql.service

[Service]
TimeoutStartSec=0
User={{ django_user }}
WorkingDirectory={{ django_project_root }}
ExecStart={{ django_venv_dir }}/bin/gunicorn \
    -c gunicorn.conf.py \
    -p gunicorn.pid \
    {{ project_name }}.wsgi

[Install]
WantedBy=multi-user.target